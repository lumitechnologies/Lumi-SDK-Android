<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_main_sign_message"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:text="@string/sign_message"
        android:textColor="@drawable/text_style"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_sign_personal_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".75" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_main_sign_personal_message"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:text="@string/sign_personal_message"
        android:textColor="@drawable/text_style"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_sign_transaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_sign_message"
        app:layout_constraintWidth_percent=".75" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_main_sign_transaction"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:text="@string/sign_transaction"
        android:textColor="@drawable/text_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_sign_personal_message"
        app:layout_constraintWidth_percent=".75" />

</android.support.constraint.ConstraintLayout>